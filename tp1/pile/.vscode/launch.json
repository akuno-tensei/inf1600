// Debug launch configurations
// Abdul-W. Chaarani 2024
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ASM",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/${relativeFileDirname}/out",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/${relativeFileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build",
      "miDebuggerPath": "/usr/bin/gdb",
      "stopAtConnect": true,
      "logging": {
        "trace": true,
        "traceResponse": true,
        "engineLogging": true
      }
    }
  ]
}
